{
    "name": "peso/peso-exchanger-interop",
    "type": "library",
    "description": "Interoperability package for Peso and Exchanger (and Swap)",
    "keywords": ["currency-conversion", "phpeso", "peso", "exchanger", "swap"],
    "homepage": "https://phpeso.readthedocs.io/",
    "license": "MIT",
    "authors": [{
        "name": "Anton Smirnov",
        "role": "developer",
        "homepage": "https://sandfox.me/",
        "email": "sandfox+phpeso@sandfox.me"
    }],
    "support": {
        "issues": "https://github.com/phpeso/peso-exchanger-interop/issues",
        "source": "https://github.com/phpeso/peso-exchanger-interop",
        "docs": "https://phpeso.readthedocs.io/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Exchanger\\Interop\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Exchanger\\Interop\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "florianv/exchanger": "^2.8",
        "peso/core": "^0.10",
        "psr/simple-cache": "^1 || ^2 || ^3"
    },
    "require-dev": {
        "florianv/swap": "^4.3",
        "guzzlehttp/guzzle": "^7.9",
        "peso/ecb-service": "^0.10",
        "peso/peso": "^0.9.0",
        "php-http/guzzle7-adapter": "^1.1",
        "phpunit/phpunit": "^12.2",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.05.07",
        "squizlabs/php_codesniffer": "*",
        "symfony/cache": "^7.3",
        "vimeo/psalm": "^6.12"
    },
    "conflict": {
        "florianv/exchanger": "2.8.2"
    }
}
